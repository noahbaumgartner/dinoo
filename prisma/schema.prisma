generator client {
  provider = "prisma-client-js"
  output   = "../lib/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  index       Int
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
}

model Category {
  id       String    @id @default(uuid())
  name     String
  icon     String
  color    String
  index    Int
  products Product[]
}

model OrderTime {
  id    String @id @default(uuid())
  time  String
  index Int
}
